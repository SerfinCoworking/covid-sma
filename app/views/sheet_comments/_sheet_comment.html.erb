<div class="media mt-3" id="sheet_comment_<%= sheet_comment.id %>">
  <%= image_tag user_avatar(sheet_comment.user, 54), class:"img-rounded img-profile-chat mr-3" %>
  <div class="media-body">
    <strong class="mt-0"><%= sheet_comment.user.full_name %></strong>
    <small><%= time_ago_in_words(sheet_comment.created_at) %></small>
    <br>
    <%= sheet_comment.text %>
  </div>
</div>