<div class="row">
  <div class="col-md-5">
    <p>
      <h5><strong>Responsable:</strong>
      <%= @internal_order.responsable.full_name %>
      <% if @internal_order.responsable.profile.enrollment.present? %>
        <strong>Matrícula: </strong> <%= @internal_order.responsable.profile.enrollment %>
      <% end %>
      </h5>
    </p>

    <p>
      <h5><strong>Sector:</strong>
      <%= @internal_order.responsable.sector.sector_name %>
      </h5>
    </p>

    <p>
      <h5><strong>Estado:</strong>
        <span class="label label-<%= @internal_order.status_label %>">
          <%= @internal_order.status.split('_').map(&:capitalize).join(' ') %>
        </span>
      </h5>
    </p>
    <br>
    <p>
      <h5><strong>Emitida:</strong>
      <%= @internal_order.created_at.strftime("%d/%m/%y %H:%M") %>
      </h5>
    </p>

    <p>
      <h5><strong>Última modificación:</strong>
      <%= @internal_order.updated_at.strftime("%d/%m/%y %H:%M") %>
      </h5>
    </p>

    <p>
      <h5><strong>Recibida:</strong>
      <%= @internal_order.date_received.strftime("%d/%m/%Y") %>
      </h5>
    </p>

    <p>
      <h5><strong>Dispensada:</strong>
      <% if @internal_order.entregado? %>
        <%= @internal_order.date_delivered.strftime("%d/%m/%Y") %>
      <% else %>
        A dispensar
      <% end %>
      </h5>
    </p>
  </div>
  <div class="col-md-7">
        <table class="table table-hover table-striped">
          <thead>
            <tr>
              <th>Insumo</th>
              <th>Cant</th>
              <th>Lote N°</th>
            </tr>
          </thead>
          <tbody>
            <% if @internal_order.supply_lots.present? %>
              <% @internal_order.quantity_supply_lots.each do |qsl| %>
                <tr>
                  <td class="io-show-sup"><%= qsl.supply_name %></td>
                  <td><span class="label label-default"><%= qsl.quantity %></span></td>
                  <td><%= qsl.supply_lot_id %></td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      <% if @internal_order.observation.present? %>
      <p>
        <h5><strong>Observaciones:</strong></h5>
        <%= @internal_order.observation %>
      </p>
      <% end %>
    </div>

</div>
