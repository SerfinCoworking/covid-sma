<div class="row hidden-print">
  <div class="col-md-2"></div>
  <div class="col-md-8 text-center">
    <label>
      Estado actual:
      <span class="label label-<%= internal_order.provider_status_label %>">
        <%= internal_order.provider_status.split('_').map(&:capitalize).join(' ') %>
      </span>
    </label><br>
    <div class="col-md-12 status-bar-icons">
          <%= content_tag(:span, '', class: 'glyphicon glyphicon-plus gi-2x pull-left', id:'zoom-glyph',
        :title => 'Creado', :'data-placement'=>'top', :'data-toggle'=>'tooltip') %>
      <%= content_tag(:span, '', class: 'glyphicon glyphicon-zoom-in gi-2x pull-left', id: 'thumb-glyph',
        :title => 'Auditado', :'data-placement'=>'top', :'data-toggle'=>'tooltip') %>
      <%= content_tag(:span, '', class: 'glyphicon glyphicon-check gi-2x pull-right', id: 'check-glyph',
        :title => 'Entregado', :'data-placement'=>'top', :'data-toggle'=>'tooltip') %>
      <%= content_tag(:span, '', class: 'glyphicon glyphicon-road gi-2x pull-right', id: 'road-glyph',
        :title => 'En camino', :'data-placement'=>'top', :'data-toggle'=>'tooltip' ) %>
    </div>
    <div class="col-md-12">
      <div class="progress" style="height: 5px;margin-bottom: -10px;">
        <div class="progress-bar progress-bar-striped active progress-bar-<%= @internal_order.provider_status_label %> \
        align-left" role="progressbar" style="width:<%= @internal_order.percent_status %>%" id="status-bar">
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-2"></div>
</div>
