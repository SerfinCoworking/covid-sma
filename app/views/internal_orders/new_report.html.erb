<%= render 'header' %>

<div class="col-md-7 mx-auto">
  <div class="card">
    <div class="card-header bg-primary d-flex align-items-center justify-content-between text-white">
      <div class="d-flex align-items-center ml-2">
        <%= fa_icon "chart-line" %> 
        <h5 class="card-title mb-0 ml-2">
          Reporte
        </h5>
      </div>
      <%= link_to sectors_path, class: 'btn text-white' do %>
        <%= fa_icon "times" %>
      <% end %>
    </div>
    <div class="card-body">
      <%= simple_form_for @internal_order, method: :get, :url => { :action => :generate_report }, html: {role: 'check-modified'} do |f| %>
        <%= f.error_notification %>
        <div class="row">
          <div class="col-md-6">
            <label>Seleccione reporte</label>
            <select class="selectpicker custom-select-pick">
              <option>Pedidos por sector</option>
              <option disabled data-subtext="Próximamente">Insumos de un sector</option>
              <option disabled data-subtext="Próximamente">Insumo específico por sector</option>
              <option disabled data-subtext="Próximamente">Pedidos de un sector</option>
              <option disabled data-subtext="Próximamente">Insumos por sector</option>
            </select>
          </div>
        </div>
        <br>
        <div class="row">
          <div class='col-md-3'>
            <%= f.input :since_date, as: :fake, label: 'Desde', as: :string,
              :placeholder => "Una fecha",
              required: true,
              input_html: {
                required: true,
                class: 'datetimepicker',
                autocomplete: 'off',
                :style => 'width: 110px',
                value: "#{f.object.requested_date unless f.object.new_record?}"
              },
              html5: false
            %>
          </div>
          <div class='col-md-3'>
            <%= f.input :to_date, as: :fake, label: 'Hasta', as: :string,
              :placeholder => "Una fecha",
              required: true,
              input_html: {
                required: true,
                class: 'datetimepicker',
                autocomplete: 'off',
                :style => 'width: 110px',
                value: "#{f.object.requested_date unless f.object.new_record?}"
              },
              html5: false 
            %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="card-footer text-right">
      <%= link_to 'Volver', :back, class: 'btn btn-light mr-2' %>
      <button type='submit' name='commit' class='btn btn-success' form='new_internal_order'>
        <%= fa_icon "check" %> Generar reporte
      </button>
    </div>
  </div>
</div>