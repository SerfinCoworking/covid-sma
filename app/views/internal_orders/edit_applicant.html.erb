<%= render 'header' %>

<div class="card fixed-custom-card">
  <div class="card-header bg-warning d-flex align-items-center justify-content-between">
    <div class="d-flex align-items-center ml-2">
      <%= fa_icon "pen" %>
      <h5 class="card-title mb-0 ml-2">
        Editando solicitud de sector
      </h5>
    </div>
    <%= link_to :back, class: 'btn',
      :title => 'Cerrar', :'data-placement'=>'top', :'data-toggle'=>'tooltip' do %>
      <%= fa_icon "times" %>
    <% end %>
  </div>
  <div class="card-body">
    <%= render 'applicant_form', internal_order: @internal_order %>
  </div>
  <div class="card-footer text-right">
    <%= link_to 'Volver', :back, class: 'btn btn-light' %>
    <button type='submit' name='commit' class='btn btn-success' form='edit_internal_order_<%=@internal_order.id%>' value='Solicitante'>
      <%= fa_icon "save" %> Guardar cambios
    </button>
    <button type='submit' name='commit' class='btn btn-primary' form='edit_internal_order_<%=@internal_order.id%>' value='Enviar'>
      <%= fa_icon "paper-plane" %> Guardar y enviar
    </button>
  </div>
</div>