<%= render 'header' %>

<div class="row">
  <div class="panel panel-warning">
    <div class="panel-heading">
      <h3 class="panel-title"><%= content_tag(:span, '', class: 'glyphicon glyphicon-edit') %> Auditando solicitud interna
        <%= link_to :back, class: 'btn pull-right close-btn',
          :title => 'Cerrar', :'data-placement'=>'top', :'data-toggle'=>'tooltip' do %>
          <%= content_tag(:span, '', class: 'glyphicon glyphicon-remove') %>
        <% end %>
      </h3>
    </div>
    <div class="panel-body" id="panel-body-new">
      <%= render 'applicant_form', internal_order: @internal_order %>
    </div>
    <div class="panel-footer text-right">
      <%= link_to 'Volver', :back, class: 'btn' %>
      <button type='submit' name='commit' class='btn btn-success' form='edit_internal_order_<%=@internal_order.id%>' value='Solicitante'>
        <%= content_tag(:span, '', class: 'glyphicon glyphicon-floppy-saved') %> Guardar cambios
      </button>
      <button type='submit' name='commit' class='btn btn-primary' form='edit_internal_order_<%=@internal_order.id%>' value='Enviar'>
        <%= content_tag(:span, '', class: 'glyphicon glyphicon-send') %> Guardar y enviar
      </button>
    </div>
  </div>
</div>