<%= render 'header' %>

<div class="card fixed-custom-card">
  <div class="card-header bg-warning d-flex align-items-center justify-content-between">
    <div class="d-flex align-items-center ml-2">
      <%= fa_icon "pen" %>
      <h5 class="card-title mb-0 ml-2">
        Editando <%= @internal_order.order_type %>
      </h5>
    </div>
    <%= link_to internal_orders_path, class: 'btn',
      :title => 'Cerrar', :'data-placement'=>'top', :'data-toggle'=>'tooltip' do %>
      <%= fa_icon "times" %>
    <% end %>
  </div>
  <div class="card-body">
    <%= render 'provider_form', internal_order: @internal_order %>
  </div>
  <div class="card-footer text-right">
    <%= link_to 'Volver', internal_orders_path, class: 'btn btn-light mr-1' %>
    <button type='submit' name='commit' class='btn btn-success mr-1' form='edit_internal_order_<%=@internal_order.id%>' value='Proveedor'>
      <%= fa_icon "save" %> Guardar cambios
    </button>
    <% if policy(@internal_order).send_provider? %>
      <button type='submit' name='commit' class='btn btn-primary' form='edit_internal_order_<%=@internal_order.id%>' value='Enviar proveedor'>
        <%= fa_icon "paper-plane" %> Guardar y enviar
      </button>
    <% end %>
  </div>
</div>
