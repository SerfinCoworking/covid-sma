<%= render 'header' %>


<div class="card fixed-custom-card">
  <div class="card-header d-flex align-items-center justify-content-between">
    <div class="d-flex align-items-center">
      <%= fa_icon "eye" %>
      <h5 class="card-title mb-0 ml-2">
        Viendo reporte
      </h5>
    </div>
    <div>
      <%= link_to internal_orders_path, class: 'btn',
          :title => 'Cerrar', :'data-placement'=>'top', :'data-toggle'=>'tooltip' do %>
        <%= fa_icon "times" %>
      <% end %>
    </div>
  </div>

    <div class="card-body">

      <div class="row">
        <div class='col-md-2 col-xs-2'>
          <strong>Desde:</strong>
          <%= @since_date.strftime("%d/%m/%Y") %>
        </div>
        <div class="col-md-2 col-xs-2">
          <strong>Hasta:</strong>
          <%= @to_date.strftime("%d/%m/%Y") %>
        </div>
        <div class="col-md-6 col-xs-6">
          <strong>Proveedor:</strong>
          <%= current_user.sector.name.upcase %> <small><%= current_user.sector.establishment_name %></small>
        </div>
        <div class="col-md-2 col-xs-2 pull-right">
          <strong>Fecha reporte:</strong>
          <%= DateTime.now.strftime('%d/%m/%Y') %>
        </div>
      </div>
      <%# <hr> %>
      <div class="row mt-2">
        <div class="col-md-12">
          <% if @filtered_orders.present? %>
          <table class="table table-hover table-condensed">
            <thead>
              <tr>
                <th>Sector</th>
                <th>Cantidad pedidos</th>
              </tr>
            </thead>
            <tbody>
              <% @filtered_orders.each do |order| %>
                <tr>
                  <td><%= order.first %></td>
                  <td><%= order.second %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <% else %>
            No hay elementos para este per√≠odo de tiempo.
          <% end %>
          <% @filtered_orders %>
        </div> <!-- End col-md-12 -->
      </div>
    </div>
    <div class="card-footer text-right">
      <%= link_to new_report_internal_orders_path, class: "btn" do %>Volver<% end %>
    </div>
  </div>