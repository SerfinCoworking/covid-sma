<%= render 'external_orders/header' %>

<div class="card">
  <div class="card-header bg-primary text-white align-items-center">
    <h5 class="card-title">
      <%= fa_icon "plus" %> Nueva solicitud de abastecimiento
      <%= link_to applicant_index_external_orders_path, class: 'btn float-right text-white' do %>
        <%= fa_icon "times" %>
      <% end %>
    </h5>
  </div>
  <div class="card-body" id="panel-body-new">
    <%= render 'external_orders/applicant_form', external_order: @external_order %>
  </div>
  <div class="card-footer d-flex justify-content-end">
    <%= link_to 'Volver', applicant_index_external_orders_path, class: 'btn btn-light mr-1' %>
    <button type='submit' name='commit' class='btn btn-success mr-1' form='new_external_order' value='Auditar'>
     <%= fa_icon "save" %> Guardar
    </button>
    <button type='submit' name='commit' class='btn btn-primary' form='new_external_order' value='Auditar y enviar', data-disable-with="<i class='fa fa-spinner fa-spin'></i> Guardando y enviando">
      <%= fa_icon "paper-plane" %> Guardar y enviar
    </button>
  </div>
</div>
