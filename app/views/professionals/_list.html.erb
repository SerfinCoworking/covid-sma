<div id="filterrific_results">
  <% if @professionals.present? %>
    <div class="card fixed-panel-list">
      <table class="table table-hover table-striped table-sm">
        <thead>
          <tr>
            <th><%= filterrific_sorting_link(@filterrific, :nombre) %></th>
            <th><%= filterrific_sorting_link(@filterrific, :apellido) %></th>
            <th><%= filterrific_sorting_link(@filterrific, :matricula) %></th>
            <th>Prescripciones</th>
            <th>Estado</th>
            <th>DNI</th>
            <th><%= filterrific_sorting_link(@filterrific, :especialidad) %></th>
            <th class="text-center">Acciones</th>
          </tr>
        </thead>
        <tbody id=professionals>
          <%= render @professionals %>
        </tbody>
      </table>
    </div>
    <div class="d-flex align-items-center justify-content-center" style="height: 50px">
      <%= will_paginate @professionals, list_classes: %w(pagination mb-0), renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
    </div>
  <% else %>
    <%= render(
      partial: 'shared/not_found_filter',
      locals: { object_name: 'profesionales' }
    ) %>
  <% end %>
</div>
