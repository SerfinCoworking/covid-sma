<%= render 'header' %>

<div class="row">
  <div class="panel panel-info" id="filter-panel">
    <div class="panel-leftheading">
      <%= content_tag(:span, '', class: 'glyphicon glyphicon-filter gi-2x') %>
    </div>
    <div class="panel-rightbody">
      <%= form_for_filterrific @filterrific do |f| %>
        <div class="col-md-2 col-sm-2">
          <label>Buscar</label>
          <%# give the search field the 'filterrific-periodically-observed' class for live updates %>
          <%= f.text_field(
            :search_professional,
            class: 'filterrific-periodically-observed form-control',
            placeholder: 'Nombre o apellido',
            autocomplete: 'off'
          ) %>
        </div>
        <div class="col-md-2 col-sm-2">
          <label>Buscar</label>
          <%# give the search field the 'filterrific-periodically-observed' class for live updates %>
          <%= f.text_field(
            :search_professional_enrollment,
            class: 'filterrific-periodically-observed form-control',
            placeholder: 'MatrÃ­cula'
          ) %>
        </div>
        <div class="col-md-2 col-sm-2">
          <label>Buscar</label>
          <%= f.text_field(
            :search_dni,
            class: 'filterrific-periodically-observed form-control',
              placeholder: 'DNI'
              ) %>
        </div>
        <div class="col-md-2 col-sm-2">
          <label>Especialidad</label>
          <%= f.select( :with_professional_type_id, @filterrific.select_options[:professional_type_id],
              { include_blank: 'Todos' }, {class: 'form-control'} ) %>
        </div>
        <div class="col-md-2 col-sm-3">
          <label>Ordenar por</label>
          <%= f.select(:sorted_by, @filterrific.select_options[:sorted_by],{}, {class: 'form-control'}) %>
        </div>
        <%= link_to reset_filterrific_url, class: "btn btn-sm pull-right" do %>
          <%= content_tag(:span, '', class: 'glyphicon glyphicon-refresh') %>
        <% end %>
        <%= render_filterrific_spinner %>
      <% end %>
    </div>
    <div class="clearfix">
    </div>
  </div>

  <% if @professionals.present? %>
    <%= render(
      partial: 'professionals/list',
      locals: { professionals: @professionals }
    ) %>
  <% else %>
    <%= render(
      partial: 'shared/not_found',
      locals: { object_name: 'profesionales' }
    ) %>
  <% end %>
</div>

