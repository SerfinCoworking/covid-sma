  <!--  Panel Prescripciones del día -->
  <div class="panel panel-default">
    <!--  Panel prescripciones recibidas por día -->
    <% unless @prescriptions.where('created_at >= ?', DateTime.now - 6.days).count == 0 %>
      <div class="panel-heading">
        <h3 class="panel-title">Pescripciones en tu establecimiento <small>Esta semana </small></h3>
      </div>
      <div class="panel-body">
        <%= line_chart @prescriptions
          .group_by_day(:prescribed_date,range: 1.weeks.ago.midnight..Time.now, format: "%a %d/%m").count, 
          discrete: true, label: 'Cantidad', adapter: "highcharts" %>
      </div>
    <% end %>
    <div class="panel-heading">
      <h3 class="panel-title">Prescripciones en tu establecimiento <small>Este año</small></h3>
    </div>
    <div class="panel-body">
      <%= column_chart charts_by_month_prescriptions_path,
        download: "Prescripciones recetadas por mes SIFAHO",
        label: "Cantidad",
        colors: ["rgb(130,165,239, 0.6)"],
        messages: {empty: "No hay prescripciones en este mes"},
        adapter: "highcharts" %>
    </div>
  </div>

<!--  Panel Últimas prescripciones -->
<% if @last_prescriptions.present? %>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Últimas prescripciones
    </h3>
  </div>
  <div class="panel-body body-table">
    <table class="table table-hover table-striped">
      <thead>
        <tr>
          <th>Doctor</th>
          <th>Paciente</th>
          <th>Estado</th>
        </tr>
      </thead>
      <tbody>
        <% @last_prescriptions.each do |pre|%>
        <tr>
          <td><%= pre.professional.fullname %></td>
          <td><%= pre.patient.fullname %></td>
          <td>
            <span class="label label-<%= pre.status_label %>">
              <%= pre.status.split('_').map(&:capitalize).join(' ') %>
            </span>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<% end %>