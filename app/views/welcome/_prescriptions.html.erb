<!--  Panel graficos de prescripciones -->
<% if @prescriptions.count > 0 %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <ul class="nav nav-tabs" id="title-chart">
        <li class="nav-item">
          <h4>Prescripciones&nbsp;</h4>
        </li>
        <li class="nav-item active">
          <a data-toggle="tab" href="#week">Semana 
            <span class="label label-default"><%= @prescriptions.last_week.count %></span> 
          </a>
        </li>
        <li class="nav-item">
          <a data-toggle="tab" href="#year">Año
            <span class="label label-default"><%= @prescriptions.current_year.count %></span>
          </a>
        </li>
      </ul>
    </div>

    <div class="panel-body">
      <div class="tab-content">
        <div id="week" class="tab-pane fade in active">
          <%= line_chart @prescriptions
            .group_by_day(:prescribed_date,range: 1.weeks.ago.midnight..Time.now, format: "%a %d/%m").count, 
            discrete: true, label: 'Cantidad', adapter: "highcharts" %>
        </div>
        <div id="year" class="tab-pane fade">
          <%= column_chart charts_by_month_prescriptions_path,
            download: "Prescripciones recetadas por mes SIFAHO",
            label: "Cantidad",
            colors: ["rgb(130,165,239, 0.6)"],
            messages: {empty: "No hay prescripciones en este año"},
            adapter: "highcharts" %>
        </div>
      </div>
    </div>
  </div>
<% end %>

<!--  Panel Últimas prescripciones -->
<% if @last_prescriptions.present? %>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Últimas prescripciones
    </h3>
  </div>
  <div class="panel-body body-table">
    <table class="table table-hover table-striped">
      <thead>
        <tr>
          <th>Doctor</th>
          <th>Paciente</th>
          <th>Estado</th>
        </tr>
      </thead>
      <tbody>
        <% @last_prescriptions.each do |pre|%>
        <tr>
          <td><%= pre.professional.fullname %></td>
          <td><%= pre.patient.fullname %></td>
          <td>
            <span class="label label-<%= pre.status_label %>">
              <%= pre.status.split('_').map(&:capitalize).join(' ') %>
            </span>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<% end %>