<%= render 'header' %>

<% if current_user.sector.present? %>
  <div cass="row">
    <div class="col-md-6">
        <%= render 'prescriptions' %>
        <%= render 'internal_orders' %>
    </div>
    <div class="col-md-6">
        <%= render 'stock' %>
        <%= render 'external_orders' %>
    </div>
  </div>
<% else %>
  <% if current_user.permission_requests.any?%>
    <div class="row">
      <div class="col-md-5 col-md-offset-3">
        <div class="card">
          <div class="card-header bg-info text-white">
            <h3><%= fa_icon "hourglass-half" %> Espere una respuesta</h3>
          </div>
          <div class="card-body">
            <p><h5>El equipo de gestión evaluará su solicitud y tomará las medidas correspondientes.</h5></p>
            <p class="text-right"><h5>Gracias por su paciencia.</h5></p>
          </div>
        </div>
      </div>
    </div>
  <% else %>
    <div class="row">
      <div class="col-md-5 col-md-offset-3">
        <div class="card">
          <div class="card-header bg-primary text-white">
            <h3><%= fa_icon "envelope" %> Solicitud de permisos</h3>
          </div>
          <div class="card-body">
            <p><h5>Complete el formulario para comenzar a utilizar el sistema.</h5></p>
            <%= render "permission_requests/form", permission_request: @permission_request %>
            <p><h5>Una vez enviado, deberá esperar a que algún gestor de usuarios responda la solicitud.</h5></p>
            <p class="text-right"><h5>Gracias por su paciencia.</h5></p>
          </div>
          <div class="card-footer text-right">
            <button type='submit' name='commit' class='btn btn-success' form='new_permission_request'>
              <%= fa_icon "paper-plane" %> Enviar
            </button>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
