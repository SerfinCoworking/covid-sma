<% content_for :page_header do %>
  <h3>Bienvenido a SIFAHO <small><%= Time.now.strftime("%d/%m/%Y") %></small></h3>
<% end %>
<div cass="row">
  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Prescripciones <small>Hoy</small>
        </h3>
      </div>
      <div class="panel-body">
        <div class="progress">
          <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
            <%= @count_prescriptions_today %> prescripciones recibidas en el día
          </div>
        </div>
        <div class="progress">
          <div class="progress-bar progress-bar-success" style="width: <%= @percent_dispensed_prescriptions %>">
            <%= @percent_dispensed_prescriptions %> dispensadas
          </div>
          <div class="progress-bar progress-bar-warning" style="width: <%= @percent_pendient_prescriptions %>">
            <%= @percent_pendient_prescriptions %> pendientes
          </div>
          <div class="progress-bar progress-bar-danger" style="width: 0%">
            10%
          </div>
        </div>
        Total: <span class="label label-primary"><%= @count_prescriptions_today %></span>
        Dispensadas: <span class="label label-success"><%= @count_disp_pres %></span>
        Pendientes: <span class="label label-warning"><%= @count_pend_pres %></span>
      </div>
      <% if @last_prescriptions.present? %>
      <div class="panel-footer"><h3 class="panel-title">Últimas recibidas</h3>
        <table class="table table-hover table-striped">
          <thead>
            <tr>
              <th>Doctor</th>
              <th>Paciente</th>
              <th>Estado</th>
            </tr>
          </thead>
          <tbody>
            <% @last_prescriptions.each do |pre|%>
              <tr>
                <td><%= pre.professional.full_name %></td>
                <td><%= pre.patient.full_name %></td>
                <td>
                  <span class="label label-<%= pre.prescription_status.label %>">
                    <%= pre.prescription_status.name %>
                  </span>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <% end %>
    </div>
  </div>
  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Medicamentos</h3>
      </div>
      <div class="panel-body">
        <div class="progress">
          <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
            <%= @count_type_medications %> lotes de medicamentos
          </div>
        </div>
        <div class="progress">
          <div class="progress-bar progress-bar-success" style="width: <%= @percent_good_medications %>">
            <%= @percent_good_medications %> buen estado
          </div>
          <div class="progress-bar progress-bar-warning" style="width: <%= @percent_near_expiry_medications %>">
            <%= @percent_near_expiry_medications %> próximas a vencer
          </div>
          <div class="progress-bar progress-bar-danger" style="width: <%= @percent_expired_medications %>">
            <%= @percent_expired_medications %> vencidas
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
