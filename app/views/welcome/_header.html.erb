
<% content_for :page_header do %>
  <% if current_user.sector.present? %>
    <li class="nav-item">
      <%= link_to root_path, class: "nav-link #{active_action('index')}" do %>
        <%= fa_icon "home" %>
        Inicio
      <% end %>
    </li>
    <% if policy(Prescription).index? %>
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle non-sel" data-toggle="dropdown" href="#">
          <%= fa_icon "file-prescription" %>
          Recetas
          <span class="caret"></span>
        </a>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdown-submenu-link">
          <% if policy(Prescription).index? %>
            <%= link_to prescriptions_path, class: "dropdown-item" do %>
              <%= fa_icon "list" %>
              Listado
            <% end %>
          <% end %>
          <% if policy(Prescription).new? %>
            <%= link_to new_prescription_path, class: "dropdown-item" do %>
              <%= fa_icon "plus" %>
              Ambulatoria
            <% end %>
          <% end %>
          <% if policy(Prescription).new_cronic? %>
            <%= link_to new_cronic_prescriptions_path, class: "dropdown-item" do %>
              <%= fa_icon "plus" %>
              Crónica
            <% end %>
          <% end %>
        </div>
      </li>
    <% end %>
    <li class="nav-item dropdown">
      <a class="nav-link dropdown-toggle non-sel" data-toggle="dropdown" href="#">
        <%= fa_icon "bezier-curve" %>
        Sectores
        <span class="caret"></span>
      </a>
      <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdown-submenu-link">
        <%= link_to applicant_index_internal_orders_path, class: "dropdown-item" do %>
          <%= content_tag(:span, '', class: 'glyphicon glyphicon-inbox') %>
          Recibos
        <% end %>
        <%= link_to internal_orders_path, class: "dropdown-item" do %>
          <%= content_tag(:span, '', class: 'glyphicon glyphicon-send') %>
          Entregas&nbsp;
          <% count =  InternalOrder.provider(current_user.sector).solicitud_enviada.count %>
          <% if count > 0 %>
            <div class="label label-info pull-right"><%= count %></div>
          <% end %>
        <% end %>
        <%= link_to new_applicant_internal_orders_path, class: "dropdown-item" do %>
          <%= content_tag(:span, '', class: 'glyphicon glyphicon-plus') %>
          Solicitud
        <% end %>
        <%= link_to new_provider_internal_orders_path, class: "dropdown-item" do %>
          <%= content_tag(:span, '', class: 'glyphicon glyphicon-plus') %>
          Provisión
        <% end %>
        <%= link_to internal_order_templates_path, class: "dropdown-item" do %>
          <%= content_tag(:span, '', class: 'glyphicon glyphicon-modal-window') %>
          Plantillas
        <% end %>
      </div>
    </li>
    <li class="nav-item dropdown">
      <a class="nav-link dropdown-toggle non-sel" data-toggle="dropdown" href="#">
        <%= fa_icon "hospital" %>
        Establecimientos
        <span class="caret"></span>
      </a>
      <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdown-submenu-link">
        <%= link_to applicant_index_external_orders_path, class: "dropdown-item" do %>
          <%= content_tag(:span, '', class: 'glyphicon glyphicon-inbox') %>
          <span class="hidden-xs">Recibos</span>
        <% end %>
        <%= link_to external_orders_path, class: "dropdown-item" do %>
          <%= content_tag(:span, '', class: 'glyphicon glyphicon-send') %>
          <span class="hidden-xs">Despachos</span>
          <% count =  ExternalOrder.provider(current_user.sector).solicitud_enviada.count %>
          <% if count > 0 %>
            <div class="label label-info pull-right"><%= count %></div>
          <% end %>
        <% end %>
        <% if policy(ExternalOrder).new_receipt? %>
          <%= link_to new_receipt_external_orders_path, class: "dropdown-item" do %>
            <%= content_tag(:span, '', class: 'glyphicon glyphicon-plus') %>
            R<span class="hidden-xs">ecibo</span>
          <% end %>
        <% end %>
        <% if policy(ExternalOrder).new_applicant? %>
          <%= link_to new_applicant_external_orders_path, class: "dropdown-item" do %>
            <%= content_tag(:span, '', class: 'glyphicon glyphicon-plus') %>
            S<span class="hidden-xs">olicitud</span>
          <% end %>
        <% end %>
        <%= link_to new_external_order_path, class: "dropdown-item" do %>
          <%= content_tag(:span, '', class: 'glyphicon glyphicon-plus') %>
          D<span class="hidden-xs">espacho</span>
        <% end %>
        <%= link_to external_order_templates_path, class: "dropdown-item" do %>
          <%= content_tag(:span, '', class: 'glyphicon glyphicon-modal-window') %>
          Plantillas
        <% end %>
      </div>
    </li>
  <% else %>
    Bienvenido <%= current_user.full_name.titleize %>
  <% end %>
<% end %>