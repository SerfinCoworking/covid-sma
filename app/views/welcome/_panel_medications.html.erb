<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Lotes de medicamentos <small>Expiraci처n</small></h3>
  </div>
  <div class="panel-body">
    <div class="progress">
      <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
        <%= @count_type_medications %> lotes de medicamentos
      </div>
    </div>
    <div class="progress">
      <div class="progress-bar progress-bar-success" style="width: <%= @percent_good_medications %>">
        <%= @percent_good_medications %> <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
      </div>
      <div class="progress-bar progress-bar-warning" style="width: <%= @percent_near_expiry_medications %>">
        <%= @percent_near_expiry_medications %> <span class="glyphicon glyphicon-time" aria-hidden="true"></span>
      </div>
      <div class="progress-bar progress-bar-danger" style="width: <%= @percent_expired_medications %>">
        <%= @percent_expired_medications %> <span class="glyphicon glyphicon-ban-circle" aria-hidden="true"></span>
      </div>
    </div>
    Total: <span class="label label-primary"><%= @count_type_medications %></span>
    Buen estado: <span class="label label-success"><%= @count_good_medications %></span>
    Pr처ximos a vencer: <span class="label label-warning"><%= @count_near_expiry_medications %></span>
    Vencidos: <span class="label label-danger"><%= @count_expired_medications %></span>
  </div>
  <div class="panel-heading">
    <h3 class="panel-title">Cantidades<small>Expiraci처n</small></h3>
  </div>
</div>
<div class="panel panel-danger">
  <div class="panel-heading">
    <h3 class="panel-title">Lotes vencidos</h3>
  </div>
  <div class="panel-body">
    <table class="table table-hover table-striped">
      <thead>
        <tr>
          <th>N째Lote</th>
          <th>Droga</th>
          <th>Cantidad</th>
        </tr>
      </thead>
      <tbody>
        <% @expired_medications.each do |em|%>
          <tr>
            <td><%= em.id %></td>
            <td><%= em.name %></td>
            <td><span class="label label-<%= em.quantity_label %>"><%= em.quantity %></span></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
