<!--  Panel Esttablecimiento -->
<div class="card">
  <div class="card-header d-flex justify-content-between">
    <div>
      <span class="navbar-brand">
        <%= fa_icon "hospital" %>
        Establecimientos
      </span>
    </div>
    <ul class="nav nav-tabs card-header-tabs" id="title-chart">
      <li class="nav-item">
        <a class="nav-link active" data-toggle="tab" href="#order-type">Total
          <span class="badge badge-secondary"><%= @external_orders.count %></span>
        </a>
      </li>
    </ul>
    <div class="d-flex align-items-center">
      <%= link_to external_orders_path, class: 'btn btn-secondary btn-sm' do %>
        Ver m√°s
      <% end %>
    </div>
  </div>
  <div class="panel-body">
    <div class="tab-content">
      <div id="order-type" class="tab-pane fade show active">
        <%= bar_chart charts_by_order_type_external_orders_path,
          label: "Cantidad",
          adapter: "highcharts" %>
      </div>
      <div id="expired" class="tab-pane fade">
        <table class="table table-hover table-striped">
          <thead>
            <tr class="danger">
              <th>Lote</th>
              <th>Insumo</th>
              <th>Cantidad</th>
              <th>Vencimiento</th>
            </tr>
          </thead>
          <tbody>
            <% @expired_supply_lots.each do |esl|%>
              <tr>
                <td><%= esl.lot_code %></td>
                <td class="ins-col-alert"><%= esl.supply_name %></td>
                <td><span class="label label-default"><%= esl.quantity %></span></td>
                <td><%= esl.expiry_date.strftime("%d/%m/%y") %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <div class="row text-center">
          <%= link_to sector_supply_lots_url(filterrific: {:with_status => 2}), class: 'btn btn-default btn-xs' do %>
            Ver todos
          <% end %>
        </div>
      </div>
      <div id="near_expire" class="tab-pane fade">
        <table class="table table-hover table-striped">
          <thead>
            <tr class="warning">
              <th>Lote</th>
              <th>Insumo</th>
              <th>Cantidad</th>
              <th>Vencimiento</th>
            </tr>
          </thead>
          <tbody>
            <% @near_expiry_supply_lots.each do |nesl|%>
              <tr>
                <td><%= nesl.lot_code %></td>
                <td><%= nesl.supply_name %></td>
                <td><span class="label label-default"><%= nesl.quantity %></span></td>
                <td><%= nesl.expiry_date.present? ? nesl.expiry_date.strftime("%d/%m/%y") : "---" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <div class="row text-center">
          <%= link_to sector_supply_lots_url(filterrific: {:with_status => 1}), class: 'btn btn-default btn-xs' do %>
            Ver todos
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>