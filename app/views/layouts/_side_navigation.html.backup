<a href="javascript:void(0)" class="closebtn" onclick="closeNav()" draggable="false">×</a>
<%= link_to main_app.root_path, class: active_class('welcome') do %>
  <%= content_tag(:span, '', class: 'glyphicon glyphicon-home') %>
  Inicio
<% end %>

<%# Menú pedidos %>
<div id="pedidos-label" class="well well-sm text-center">
  <span class="glyphicon glyphicon-list-alt"></span>
  <strong> Pedidos</strong>
</div>
<% if policy(Prescription).index? %>
  <%= link_to main_app.prescriptions_path, class: active_class('prescriptions'), draggable: false, id: 'pedido' do %>
    Prescripciones
  <% end %>
<% end %>
<% if policy(BedOrder).index? %>
  <%= link_to main_app.bed_orders_path, class: active_class('bed_orders'), draggable: false, id: 'pedido' do %>
    Internación
  <% end %>
<% end %>
<% if policy(InternalOrder).index? %>
  <%= link_to main_app.applicant_index_internal_orders_path, class: active_class('internal_orders'), draggable: false, id: 'pedido' do %>
    Sectores
    <% count =  InternalOrder.provider(current_user.sector).solicitud_enviada.count %>
    <% if count > 0 %>
      <div class="label label-info pull-right"><%= count %></div>
    <% end %>
  <% end %>
<% end %>
<% if policy(ExternalOrder).index? %>
  <%= link_to main_app.applicant_index_external_orders_path, class: active_class('external_orders'), draggable: false, id: 'pedido' do %>
