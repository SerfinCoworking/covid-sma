<%# navigation styled for Bootstrap 3.0 %>
<div class="col-sm-2 col-md-2 sidebar-nav">
  <% if current_user.present? %>
    <div class="span3 bs-docs-sidebar">
      <ul id="custom-sidebar" class="nav nav-pills nav-stacked affix col-md-3" style="top: 50px;max-width: 200px;background-color:#222222;left:0px;height: 100%;">
        <%= render 'layouts/side_navigation_links' %>
      </ul>
    </div>
  <% end %>
</div>
<nav id="custom-bootstrap-menu" class="navbar navbar-default navbar-default-cust navbar-fixed-top">
  <div class="container-fullwidth">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to root_path, data: { turbolinks: false }, class: 'navbar-brand navbar-left' do %>
        <%= image_tag('sifaho-brand.png')%>
      <% end %>
    </div>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav navbar-right">
        <%= render 'devise/menu/login_items' %>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <%= render 'layouts/navigation_links' %>
      </ul>
    </div>
  </div>
</nav>
