
<!-- Sidebar -->
<div class="bg-light border-right navbar-light" id="sidebar-wrapper">
  <!--Brand-->
  <div class="sidebar-heading d-flex justify-content-between">    
    <%= link_to root_path, data: { turbolinks: false }, class: "navbar-brand #{active_class('welcome')}" do %>
      <%= image_tag("LogoSIFAHO.png", size: "30x30", alt: "Logo SIFAHO", class: 'logo') %>
      SIFAHO
    <% end %>

    <button class="btn btn-light" id="menu-toggle"><%= fa_icon "bars" %></button>
  </div>


