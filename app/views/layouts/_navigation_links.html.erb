<% if user_signed_in? %>
  <li class="nav-item <%= active_class('notifications/notifications') %>">
    <%= link_to main_app.notifications_path, class: "nav-link", :title => 'Ver notificaciones', :'data-placement'=>'bottom', :'data-toggle'=>'tooltip' do %>
      <% count = Notification.unread_count(current_user) %>
      <%= fa_icon "bell" %>
      <% if count > 0 %>
        <div class="badge badge-danger badge-notify"><%= count %></div>
      <% end %>
    <% end %>
  </li>
<% end %>
