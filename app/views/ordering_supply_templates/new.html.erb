<%= render "ordering_supplies/header" %>

<div class="row">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title">
        <%= content_tag(:span, '', class: 'glyphicon glyphicon-plus') %> Nueva plantilla de solicitud a establecimiento
        <%= link_to ordering_supply_templates_path, class: 'btn pull-right close-btn' do %>
          <%= content_tag(:span, '', class: 'glyphicon glyphicon-remove') %>
        <% end %>
      </h3>
    </div>
    <div class="panel-body" id="panel-body-new">
      <%= render 'form', ordering_supply_template: @ordering_supply_template %>
    </div>
    <div class="panel-footer text-right">
      <%= link_to 'Volver', ordering_supply_templates_path, class: 'btn' %>
      <button type='submit' name='commit' class='btn btn-success' form='new_ordering_supply_template' value='Auditar'>
        <%= content_tag(:span, '', class: 'glyphicon glyphicon-floppy-saved') %> Guardar
      </button>
    </div>
  </div>
</div>
