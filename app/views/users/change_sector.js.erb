// Style modal
$('.modal-header').addClass('bg-primary text-white');

// Add the dialog title
$('.modal-title').html("<i class='fa fa-street-view'></i>  Cambiar ubicaci√≥n");

// Render the new form
$('.modal-body').html('<%= j render("change_form") %>');

// Add form button
$('.modal-footer').html(
  "<button type='button' class='btn' data-dismiss='modal'>Volver</button>"+
  "<button type='submit' name='commit' class='btn btn-success pull-right' form='change_form'><i class='fa fa-exchange-alt'></i> Cambiar</button>"
);

// Show the dynamic dialog
$('#dialog').modal("show");

// Set focus to the first element
$('#dialog').on('shown.bs.modal', function () {
  $('.first_input').focus();
});

// Remove style
$('#dialog').on('hidden.bs.modal', function () {
  $('.modal-header').removeClass('bg-primary text-white');
});

