<div id="filterrific_results">
  <% if @users.present? %>
    <div class="card">
      <table class="card table-hover table-striped table-sm">
        <thead>
          <tr>
            <th></th>
            <th>Usuario</th>
            <th>Apellido</th>
            <th>Nombre</th>
            <th>Email</th>
            <th>Sectores</th>
            <th>Última conexión</th>
            <th class="text-center">Acciones</th>
          </tr>
        </thead>
        <tbody id="users">
          <%= render @users %>
        </tbody>
      </table>
    </div>
    <div class="d-flex align-items-center justify-content-center" style="height: 50px">
      <%= will_paginate @users, list_classes: %w(pagination mb-0), renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
    </div>
  <% else %>
    <%= render(
      partial: 'shared/not_found_filter',
      locals: { object_name: 'usuarios' }
    ) %>
  <% end %>
</div>
