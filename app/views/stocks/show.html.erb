<%= render 'header' %>

<div class="row">
  <div class="col-md-7 col-md-offset-2">
    <div class="panel panel-default">
      <div class="panel-heading hidden-print">
        <h3 class="panel-title">
          <%= content_tag(:span, '', class: 'glyphicon glyphicon-eye-open') %> Viendo stock de <%= @stock.product_name %>
          <%= link_to stocks_path, class: 'btn pull-right close-btn',
            :title => 'Cerrar', :'data-placement'=>'top', :'data-toggle'=>'tooltip' do %>
            <%= content_tag(:span, '', class: 'glyphicon glyphicon-remove') %>
          <% end %>
        </h3>
      </div>
      <div class="panel-body" id="panel-body-new">
        
        <div class="row">
          <div class="col-md-7">
            <h5><strong>Código: </strong><%= @stock.product_code %></h5>

            <h5><strong>Producto: </strong><%= @stock.product_name %></h5>

            <h5><strong>Unidad: </strong><%= @stock.product_unity_name %></h5>

            <h5><strong>Área: </strong><%= @stock.product_area_name %></h5>

          </div>
        </div>
      </div>

      <!-- Botones de acción footer -->
      <div class="panel-footer text-right hidden-print">
        <%= link_to 'Volver', stocks_path, class: "btn" %>
      </div>
    </div>
  </div>
</div>
