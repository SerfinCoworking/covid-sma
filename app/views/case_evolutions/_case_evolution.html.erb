<tr class="case_evolution_<%= case_evolution.id %>">
  <td><%= case_evolution.created_at.strftime("%d/%m/%Y") %></td>
  <td>
    <span class="badge badge-<%= case_evolution.case_status_badge %>">
      <%= case_evolution.case_status_name %>
    </span>
  </td>
  <td><%= case_evolution.case_status.needs_diagnostic? ? case_evolution.diagnostic_method.name : '-' %></td>
  <td><%= case_evolution.case_status.needs_diagnostic? ? case_evolution.special_device.name : '-' %></td>
  <td>
    <% if policy(case_evolution).edit? %>
      <%= link_to edit_case_evolution_path(case_evolution), remote: true, class: 'btn btn-sm btn-warning' do %>
        <%= fa_icon 'pen' %>
      <% end %>
    <% end %>
    <% if policy(case_evolution).destroy? %>
      <%= link_to case_evolution_path(case_evolution), method: :destroy, remote: true, class: 'btn btn-sm btn-danger' do %>
        <%= fa_icon 'trash' %>
      <% end %>
    <% end %>
  </td>
</tr>
