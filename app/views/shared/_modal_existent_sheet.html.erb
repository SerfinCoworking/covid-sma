<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title">
          <i class="fas fa-exclamation mr-2"></i>
          Ficha existente
      </h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <div id="patient-data">
        <span>
          El paciente
        </span>
        <span id="patient-fullname"> <%= @patient.fullname.humanize %> </span>
        <span>posee una ficha.</span>
        <div>
          <span>Dni: </span>
          <span id="patient-dni"> <%= @patient.dni %> </span>
        </div>
        <div>
          <span>Registrado en el establecimiento: </span>
          <span id="establishment"> <%= @patient.assigned_establishment.name %> </span>
        </div>
      </div>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-secondary" data-dismiss="modal">Buscar otro paciente</button>
      <%= link_to "Ir a ficha", epidemic_sheet_path(@patient.epidemic_sheet.id), class: "btn btn-primary" %>
      <% if @close_contact.present? %>
        <%= link_to "Relacionar ficha", associate_epidemic_sheet_epidemic_sheet_path(@patient.id, close_contact_patient: @close_contact.id), class: "btn btn-success", method: :patch %>
      <% end %>
    </div>
  </div>
</div>