
<div class="card">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h5 class="card-title mb-0 ml-2"><%= title %></h5>
    <span class="badge badge-primary badge-pill" data-toggle="tooltip" data-placement="top" title="Cantidad de sectores"><%= sectors.count %></span>
  </div>
  <div class="card-body p-0">
    <ul class="list-group">
      <% sectors.each do |sector| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <span><%= sector.name%></span>
          <% if policy(sector).show? %>
            <%= link_to sector_path(sector), class: 'btn btn-light btn-sm',
                  title: 'Ver detalles', data: { toggle: 'tooltip', placement: 'top' } do %>
                  <%= fa_icon "eye" %>
            <% end %>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
