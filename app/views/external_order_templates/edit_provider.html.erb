<%= render "external_orders/header" %>

<div class="row">
  <div class="panel panel-warning">
    <div class="panel-heading">
      <h3 class="panel-title">
        <%= content_tag(:span, '', class: 'glyphicon glyphicon-edit') %> Editando plantilla de despacho a establecimiento
        <%= link_to external_order_templates_path, class: 'btn pull-right close-btn' do %>
          <%= content_tag(:span, '', class: 'glyphicon glyphicon-remove') %>
        <% end %>
      </h3>
    </div>
    <div class="panel-body" id="panel-body-new">
      <%= render 'form', external_order_template: @external_order_template %>
    </div>
    <div class="panel-footer text-right">
      <%= link_to 'Volver', external_order_templates_path, class: 'btn' %>
      <button type='submit' name='commit' class='btn btn-success' form='edit_external_order_template_<%= @external_order_template.id %>' value='Auditar'>
        <%= content_tag(:span, '', class: 'glyphicon glyphicon-floppy-saved') %> Guardar
      </button>
    </div>
  </div>
</div>
