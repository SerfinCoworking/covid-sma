      <table class="table table-hover table-striped">
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Camas</th>
          </tr>
        </thead>
        <tbody>
          <% @bedrooms.each do |bedr| %>
            <tr>
              <td><%= bedr.name %></td>
              <td><span class="badge"><%= bedr.beds.count %></span></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
