<%= render 'header' %>

<div class="row">
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          <span class="glyphicon glyphicon-bed"></span>
          Camas
          <span class="badge"><%= @beds.count %></span>
        </h3>
      </div>
      <table class="table table-hover table-striped">
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Habitaci√≥n</th>
            <th>Servicio</th>
            <th>Provisiones</th>
          </tr>
