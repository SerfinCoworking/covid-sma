<%= form_for_filterrific @filterrific, id: "filterrific_filter" do |f| %>
  <div class="row justify-content-between">
    <div class="col-2">
      <label>Insumo</label>
      <%# give the search field the 'filterrific-periodically-observed' class for live updates %>
      <%= f.text_field(
        :with_code,
        class: 'filterrific-periodically-observed form-control input-sm',
        placeholder: 'CÃ³digo',
        autocomplete: 'off'
      ) %>
    </div>
    <div class="col-2">
      <label>Insumo</label>
      <%# give the search field the 'filterrific-periodically-observed' class for live updates %>
      <%= f.text_field(
        :search_supply_by_name_or_code,
        class: 'filterrific-periodically-observed form-control input-sm',
        placeholder: 'Nombre de insumo',
        autocomplete: 'off'
      ) %>
    </div>
    <div class="col-2">
      <label>Estado</label>
      <%= f.select(:with_status,
        @filterrific.select_options[:with_status].map {
          |status| [status.first, status.second, data: {'content': "<span class='label label-"+status.third+"'>"+status.first+"</span>"}]
        },{},
        { class: "selectpicker show-tick", "data-width"=>"135px"}) %>
    </div>
    <div class="col-2">
      <label>Ordenar por</label>
      <%= f.select(:sorted_by, @filterrific.select_options[:sorted_by],{}, {class: 'selectpicker show-tick',  "data-width"=>"135px"}) %>
    </div>
    <div class="col-2">
      <label>Recibido desde</label>
      <%= f.text_field(:date_received_at, placeholder: "Una fecha", data: { date_format: 'DD/MM/YYYY'},
        class: 'form-control filterrific-periodically-observed datetimepicker input-sm') %>
    </div>
    <div class="col-2">
      <label>Vigente hasta</label>
      <%= f.text_field(:date_received_at, placeholder: "Una fecha", data: { date_format: 'DD/MM/YYYY'},
        class: 'form-control filterrific-periodically-observed datetimepicker input-sm') %>
    </div>
    <!-- Spinner para la carga -->
    <%= render_filterrific_spinner %>
  </div>
<% end %>
