<% if @supply_id.present? %>
  <% if @sector_supply_lots.present? %>
  // Add the dialog title
  $('.modal-dialog').addClass('modal-lg');
  $('.modal-header').addClass('bg-primary text-white');
  $('.modal-title').html("<i class='fa fa-barcode'></i>  Seleccionar lote en stock");

  // Render the edit form
  $('.modal-body').html('<%= j render("lot_list") %>');

  // Add form button
  $('.modal-footer').html(
    "<button type='button' class='btn' data-dismiss='modal'>Volver</button>"
  );

  // Show the dynamic dialog
  $('#dialog').modal("show");

  // Remove style
  $('#dialog').on('hidden.bs.modal', function () {
    $('.modal-header').removeClass('bg-secondary text-white');
    $('.modal-dialog').removeClass('modal-lg');
  });
  <% else %>
    $('.modal-header').addClass('bg-info text-white');
    $('.modal-title').html("<i class='fa fa-info'></i>  Sin stock");
    $('.modal-body').html("<p>No tienes lotes en stock de ese producto</p>");
    $('.modal-footer').html(
      "<button type='button' class='btn' data-dismiss='modal'>Volver</button>"
    );
    $('#dialog').modal("show");
    $('#dialog').on('hidden.bs.modal', function () {
      $('.modal-header').removeClass('bg-info text-white');
    });
  <% end %>
<% else %>
  $('.modal-header').addClass('bg-warning');
  $('.modal-title').html("<i class='fa fa-exclamation-triangle'></i>  Elegir un producto!");
  $('.modal-body').html("<p>No se ha seleccionado ning√∫n producto</p><p>Por favor seleccione uno</p>");
  $('.modal-footer').html(
    "<button type='button' class='btn' data-dismiss='modal'>Volver</button>"
  );
  $('#dialog').modal("show");
  $('#dialog').on('hidden.bs.modal', function () {
    $('.modal-header').removeClass('bg-warning');
  });
<% end %>