<p id="notice"><%= notice %></p>
<p>Seleccione un lote para el insumo <%= @sector_supply_lots.first.supply_name %></p>
<div class="card">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>CÃ³digo</th>
        <th>Cantidad</th>
        <th>Estado</th>
        <th>Vencimiento</th>
        <th>Laboratorio</th>
      </tr>
    </thead>
    <tbody>
      <% @sector_supply_lots.each do |lot| %>
        <tr class="<%= lot.id.to_s == @selected_lot_id ? "table-info" : "clickable-lot" %>">
          <td><%= lot.lot_code %></td>
          <td><%= lot.quantity %></td>
          <td>
            <span class="badge badge-<%= lot.status_label %>">
              <%= lot.status.underscore.humanize %>
            </span>
          </td>
          <td><%= lot.expiry_date.present? ? lot.expiry_date.strftime("%d/%m/%Y") : "No vence" %></td>
          <td><%= lot.laboratory %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>