<% render 'header' %>

<% if @products.present? %>
  <div class="card">
    <div class="card-header">
      <%= render 'filter' %>
    </div>
    <div class="card-body fixed-panel-index">
      <%= render(
        partial: 'products/list',
        locals: { products: @products }
      ) %>
    </div>
  </div>
<% else %>
  <%= render(
    partial: 'shared/not_found',
    locals: { object_name: 'productos' }
  ) %>
<% end %>