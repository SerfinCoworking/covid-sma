  <div class='row'>
    <div class='col-md-12'>
      <label>Insumos a dispensar</label>
      <div id="quantity-supply-lots">
        <%= f.simple_fields_for :quantity_supply_lots, html: {class: "form-inline"} do |form_quantity| %>
          <%= render "quantity_supply_lot_fields", :f => form_quantity %>
        <% end %>
        <div class="links">
          <%= link_to_add_association f, :quantity_supply_lots, class: 'btn btn-primary btn-sm' do %>
              <%= content_tag(:span, '', class: 'glyphicon glyphicon-plus') %>
          <% end %>
        </div>
      </div>
      <br>
    </div>
  </div>
  <div class='row'>
    <div class='col-md-6'>
      <%= f.input :date_received, label: 'Fecha recetada',
                                  as: :string,
                                  :placeholder => "Seleccionar fecha",
                                  input_html: {class: "form-control", required: true, autocomplete: 'off',
                                  value: "#{@prescription.date_received unless @prescription.new_record?}"},
                                  html5: false
                                  %>
    </div>
    <div class='col-md-6'>
      <%= f.input :date_received, label: 'Fecha expiración',
                                  as: :string,
                                  :placeholder => "Seleccionar fecha",
                                  input_html: {class: "form-control", required: true, autocomplete: 'off',
                                  value: "#{@prescription.date_received unless @prescription.new_record?}"},
                                  html5: false
                                  %>
    </div>
  </div>
<% end %>
