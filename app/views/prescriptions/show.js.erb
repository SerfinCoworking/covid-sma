// Add the dialog title
$('#dialog h4').html("<i class='glyphicon glyphicon-eye-open'></i>  Viendo prescripción");

// Render the edit form
$('.modal-body').html('<%= j render("show") %>');

// Add form button
$('.modal-footer').html(
  "<button type='button' class='btn btn-default' data-dismiss='modal'>Volver</button>"+
  "<% if policy(@prescription).edit? %>"+
    '<%= link_to edit_prescription_path(@prescription), remote: true, class: "btn btn-warning btn-md" do %>'+
      '<%= content_tag(:span, "", class: "glyphicon glyphicon-edit") %>'+
      ' Editar prescripción'+
    '<% end %>'+
  "<% end %>"
);

// Show the dynamic dialog
$('#dialog').modal("show");
