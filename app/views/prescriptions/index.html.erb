<p id="notice"><%= notice %></p>

<h1>Prescriptions</h1>

<table>
  <thead>
    <tr>
      <th>Observation</th>
      <th>Date received</th>
      <th>Date processed</th>
      <th>Id professional grantor</th>
      <th>Id patient</th>
      <th>Id prescription status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @prescriptions.each do |prescription| %>
      <tr>
        <td><%= prescription.observation %></td>
        <td><%= prescription.date_received %></td>
        <td><%= prescription.date_processed %></td>
        <td><%= prescription.professional_id %></td>
        <td><%= prescription.patient_id %></td>
        <td><%= prescription.prescription_status_id %></td>
        <td><%= link_to 'Show', prescription %></td>
        <td><%= link_to 'Edit', edit_prescription_path(prescription) %></td>
        <td><%= link_to 'Destroy', prescription, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

