<%= render 'header' %>

<div class="card">
  <div class="card-header bg-warning">
    <h5 class="card-title mb-0">
      <%= fa_icon "edit" %> Auditando prescripción <%= @prescription.ambulatoria? ? 'ambulatoria' : 'crónica' %>
      <% if @prescription.cronica? %>
        (Dispensación <%= @prescription.cronic_dispensations.to_set.count.next %> de <%= @prescription.times_dispensation %>)
      <% end %>
      <%= link_to :back, class: 'btn float-right p-0',
        :title => 'Cerrar', :'data-placement'=>'top', :'data-toggle'=>'tooltip' do %>
        <%= fa_icon "times" %>
      <% end %>
    </h5>
  </div>
  <div class="card-body" id="panel-body-new">
    <% if @prescription.ambulatoria? %>
      <%= render 'form', prescription: @prescription %>
    <% else %>
      <%= render 'form_cronic', prescription: @prescription %>
    <% end %>
  </div>
  <div class="card-footer text-right">
      <%= link_to 'Volver', prescriptions_path, class: 'btn' %>
      <button type='submit' name='commit' class='btn btn-success' form='edit_prescription_<%=@prescription.id%>' value='Solicitante'>
        <%= fa_icon "save" %> Guardar cambios
      </button>
      <button type='submit' name='commit' class='btn btn-primary' form='edit_prescription_<%=@prescription.id%>' value='Dispensar'>
        <%= fa_icon "paper-plane" %> Dispensar
      </button>
  </div>
</div>