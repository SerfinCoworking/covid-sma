<%= render 'header' %>

<div class="row">
  <div class="panel panel-warning">
    <div class="panel-heading">
      <h3 class="panel-title"><%= content_tag(:span, '', class: 'glyphicon glyphicon-edit') %> 
        Auditando prescripción <%= @prescription.ambulatoria? ? 'ambulatoria.' : 'crónica.' %>
        <% if @prescription.cronica? %>
          (Dispensación <%= @prescription.cronic_dispensations.to_set.count.next %> de <%= @prescription.times_dispensation %>)
        <% end %>
        <%= link_to :back, class: 'btn pull-right close-btn',
          :title => 'Cerrar', :'data-placement'=>'top', :'data-toggle'=>'tooltip' do %>
          <%= content_tag(:span, '', class: 'glyphicon glyphicon-remove') %>
        <% end %>
      </h3>
    </div>
    <div class="panel-body" id="panel-body-new">
      <% if @prescription.ambulatoria? %>
        <%= render 'form', prescription: @prescription %>
      <% else %>
        <%= render 'form_cronic', prescription: @prescription %>
      <% end %>
    </div>
    <div class="panel-footer text-right">
        <%= link_to 'Volver', prescriptions_path, class: 'btn' %>
        <button type='submit' name='commit' class='btn btn-success' form='edit_prescription_<%=@prescription.id%>' value='Solicitante'>
          <%= content_tag(:span, '', class: 'glyphicon glyphicon-floppy-saved') %> Guardar cambios
        </button>
        <button type='submit' name='commit' class='btn btn-primary' form='edit_prescription_<%=@prescription.id%>' value='Dispensar'>
          <%= content_tag(:span, '', class: 'glyphicon glyphicon-send') %> Dispensar
        </button>
    </div>
  </div>
</div>