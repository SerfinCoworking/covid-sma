<%= render 'header' %>

<div class="row">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title">
        <%= content_tag(:span, '', class: 'glyphicon glyphicon-plus') %> Nueva prescripción crónica
        <%= link_to prescriptions_path, class: 'btn pull-right close-btn' do %>
          <%= content_tag(:span, '', class: 'glyphicon glyphicon-remove') %>
        <% end %>
      </h3>
    </div>
    <div class="panel-body" id="panel-body-new">
      <%= render 'form_cronic', prescription: @prescription %>
    </div>
    <div class="panel-footer text-right">
      <%= link_to 'Volver', prescriptions_path, class: 'btn' %>
      <button type='submit' name='commit' class='btn btn-success' form='new_prescription' value='Cargar prescripción'>
        <%= content_tag(:span, '', class: 'glyphicon glyphicon-floppy-saved') %> Guardar
      </button>
      <button type='submit' name='commit' class='btn btn-primary' form='new_prescription' value='Cargar y dispensar'>
        <%= content_tag(:span, '', class: 'glyphicon glyphicon-send') %> Guardar y dispensar
      </button>
    </div>
  </div>
</div>