<tr id="sanitary_zones_<%= sanitary_zone.id %>">
  <div class="js-fade fade-in is-paused">
    <td><%= sanitary_zone.name %></td>
    <td><%= sanitary_zone.departments.count %></td>
    <td><%= sanitary_zone.establishments.count %></td>
    <td class="text-left actions-col">
      <% if policy(sanitary_zone).show? %>
        <%= link_to sanitary_zone_path(sanitary_zone), class: 'btn btn-secondary btn-sm',
            title: 'Ver detalles', data: { toggle: 'tooltip', placement: 'top' } do %>
            <%= fa_icon "eye" %>
        <% end %>
      <% end %>
      <% if policy(sanitary_zone).edit? %>
        <%= link_to edit_sanitary_zone_path(sanitary_zone), class: 'btn btn-warning btn-sm',
            title: 'Editar', data: { toggle: 'tooltip', placement: 'top' } do %>
            <%= fa_icon "pen" %>
        <% end %>
      <% end %>
      <% if policy(sanitary_zone).destroy? %>
        <%= link_to delete_sanitary_zone_path(sanitary_zone), remote: true,
          class: 'btn btn-danger btn-sm', title: 'Borrar', data: { toggle: 'tooltip', placement: 'top' } do %>
          <%= fa_icon "trash" %>
        <% end %>
      <% end %>
    </td>
  </div>
</tr>
