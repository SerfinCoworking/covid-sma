<div class="media mt-3" id="internal_order_comment_<%= internal_order_comment.id %>">
  <%= image_tag user_avatar(internal_order_comment.user, 54), class:"img-rounded img-profile-chat mr-3" %>
  <div class="media-body">
    <strong class="mt-0"><%= internal_order_comment.user.full_name %></strong>
    <small><%= time_ago_in_words(internal_order_comment.created_at) %></small>
    <br>
    <%= internal_order_comment.text %>
  </div>
</div>