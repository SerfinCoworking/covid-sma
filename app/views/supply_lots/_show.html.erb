<p id="notice"><%= notice %></p>

<h5><strong>Lote código: </strong><%= @supply_lot.lot_code %></h5>

<h5><strong>Insumo: </strong><%= @supply_lot.supply_name %></h5>

<h5><strong>Código insumo: </strong><%= @supply_lot.code %></h5>

<h5><strong>Laboratorio: </strong><%= @supply_lot.laboratory.name %></h5>

<h5><strong>Estado: </strong>
  <span class='label label-<%= @supply_lot.status_label %>'>
    <%= @supply_lot.status %>
  </span>
</h5>

<div class="row">
  <div class="col-md-6">
    <h5><strong>Cargado:</strong></h5>
    <%= @supply_lot.created_at.strftime("%d/%m/%y %H:%M") %>

    <% if @supply_lot.supply.needs_expiration? %>
    <h5><strong>Expiración:</strong></h5>
    <%= @supply_lot.expiry_date.strftime("%d/%m/%Y") %>
    <% end %>
  </div>
  <div class="col-md-6">
    <h5><strong>Última modificación:</strong></h5>
    <%= @supply_lot.updated_at.strftime("%d/%m/%y %H:%M") %>

    <% if @supply_lot.deleted? %>
    <h5><strong>Eliminado:</strong></h5>
    <%= @supply_lot.deleted_at.strftime("%d/%m/%y %H:%M") %>
    <% end %>
  </div>
</div>
