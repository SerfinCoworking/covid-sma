// Add the dialog title
$('#dialog h3').html("<i class=' glyphicon glyphicon-pencil'></i>  Editando lote de <%= @supply_lot.name %>");

// Render the edit form
$('.modal-body').html('<%= j render("form") %>');

// Add form button
$('.modal-footer').html(
  "<button type='button' class='btn btn-default pull-left' data-dismiss='modal'>Volver</button>"+
  "<button type='submit' class='btn btn-primary pull-right' form='edit_supply_lot_<%=@supply_lot.id%>' value='Guardar cambios'>Guardar cambios</button>"
);

// Show the dynamic dialog
$('#dialog').modal("show");

// Set focus to the first element
$('#dialog').on('shown.bs.modal', function () {
  $('.first_input').focus()
})

<%= render 'form_function' %>

$('#supply_lot_date_received').val("<%= @supply_lot.date_received.strftime("%d/%m/%Y") %>");
$('#supply_lot_expiry_date').val("<%= @supply_lot.expiry_date.strftime("%d/%m/%Y") %>");
