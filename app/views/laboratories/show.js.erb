// Add the dialog title
$('#dialog h4').html("<i class='glyphicon glyphicon-eye-open'></i>  Viendo laboratorio");

// Render the edit form
$('.modal-body').html('<%= j render("show") %>');

// Add form button
$('.modal-footer').html(
  "<button type='button' class='btn btn-default pull-left' data-dismiss='modal'>Volver</button>"+
  "<% if policy(@laboratory).edit? %>"+
  '<%= link_to edit_laboratory_path(@laboratory), remote: true, class: "btn btn-warning btn-md" do %>'+
    '<%= content_tag(:span, "", class: "glyphicon glyphicon-edit") %>'+
    ' Editar laboratorio'+
  '<% end %>'+
  "<% end %>"
);

// Show the dynamic dialog
$('#dialog').modal("show");
