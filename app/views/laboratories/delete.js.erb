// Style modal

// Add the dialog title
$('.modal-title').html("<i class='fa fa-trash'></i>  Borrando laboratorio");
$('.modal-header').addClass('bg-danger');
$('.modal-header').addClass('text-white');

// Render the edit form
$('.modal-body').html('Esta seguro que desea eliminar el laboratorio <%= @laboratory.name %>?');

// Add form button
$('.modal-footer').html(
  "<button type='button' class='btn btn-default pull-left' data-dismiss='modal'>Volver</button>"+
  "<a data-remote='true' data-method='delete' href='/laboratories/<%= @laboratory.id %>>' data-dismiss='modal' class='btn commit btn-danger pull-right' rel='nofollow'>Confirmar</a>"
);

// Show the dynamic dialog
$('#dialog').modal("show");

// Remove style
$('#dialog').on('hidden.bs.modal', function () {
  $('.modal-header').removeClass('bg-danger');
  $('.modal-header').removeClass('text-white');
});
