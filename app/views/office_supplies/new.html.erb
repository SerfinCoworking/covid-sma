<%= render 'header' %>

<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">
      <%= content_tag(:span, '', class: 'glyphicon glyphicon-plus') %> Nuevo insumo de oficina
      <%= link_to :back, class: 'btn pull-right close-btn' do %>
        <%= content_tag(:span, '', class: 'glyphicon glyphicon-remove') %>
      <% end %>
    </h3>
  </div>
  <div class="panel-body" id="panel-body-new">
    <%= render 'form', office_supply: @office_supply %>
  </div>
  <div class="panel-footer text-right">
    <%= link_to 'Volver', office_supplies_path, class: 'btn' %>
    <button type='submit' name='commit' class='btn btn-primary' form='new_office_supply' value='Cargar'>
      <%= content_tag(:span, '', class: 'glyphicon glyphicon-floppy-saved') %> Guardar
    </button>
  </div>
</div>
