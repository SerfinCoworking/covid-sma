<div id="filterrific_results">
  <div class="card fixed-panel-list">
    <table class="table table-hover table-striped table-sm">
      <thead>
        <tr>
          <th><%= filterrific_sorting_link(@filterrific, :codigo) %></th>
          <th><%= filterrific_sorting_link(@filterrific, :codigo_producto) %></th>
          <th><%= filterrific_sorting_link(@filterrific, :producto) %></th>
          <th><%= filterrific_sorting_link(@filterrific, :laboratorio) %></th>
          <th class="text-center">Acciones</th>
        </tr>
      </thead>
      <tbody id="lots">
        <%= render @lots %>
      </tbody>
    </table>
  </div>
  <div id="page_links">
    <%= paginate @lot %>
  </div>
</div>
