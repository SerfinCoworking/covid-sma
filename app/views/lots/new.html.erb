<%= render 'header' %>

<div class="row">
  <div class="col-md-5 col-md-offset-4">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">
          <%= content_tag(:span, '', class: 'glyphicon glyphicon-plus') %> Nuevo lote
          <%= link_to :back, class: 'btn pull-right close-btn' do %>
            <%= content_tag(:span, '', class: 'glyphicon glyphicon-remove') %>
          <% end %>
        </h3>
      </div>
      <div class="panel-body" id="panel-body-new">
        <%= render 'form', lot: @lot %>
      </div>
      <div class="panel-footer text-right">
        <%= link_to 'Volver', lots_path, class: 'btn' %>
        <button type='submit' name='commit' class='btn btn-primary' form='new_lot'>
          <%= content_tag(:span, '', class: 'glyphicon glyphicon-check') %> Crear
        </button>
      </div>
    </div>
  </div>
</div>
