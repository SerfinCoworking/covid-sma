<div class="panel panel-info" id="filter-panel">
  <div class="panel-leftheading">
    <%= content_tag(:span, '', class: 'glyphicon glyphicon-filter gi-2x') %>
  </div>
  <div class="panel-rightbody">
    <div class="row">
      <%= form_for_filterrific @filterrific do |f| %>
        <div class="col-md-3 col-sm-3">
          <label>C贸digo lote</label>
          <%= f.text_field(
            :search_lot_code,
            class: 'filterrific-periodically-observed form-control input-sm',
            placeholder: 'C贸dgio'
          ) %>
        </div>
        <div class="col-md-3 col-sm-3">
          <label>C贸digo producto</label>
          <%= f.text_field(
            :search_product_code,
            class: 'filterrific-periodically-observed form-control input-sm',
            placeholder: 'C贸digo',
            autocomplete: 'off'
          ) %>
        </div>
        <div class="col-md-3 col-sm-3">
          <label>Nombre producto</label>
          <%= f.text_field(
            :search_product,
            class: 'filterrific-periodically-observed form-control input-sm',
            placeholder: 'Nombre',
            autocomplete: 'off'
          ) %>
        </div>
        <div class="col-md-3 col-sm-3">
          <label>Laboratorio</label>
          <%= f.text_field(
            :search_laboratory,
            class: 'filterrific-periodically-observed form-control input-sm',
            placeholder: 'Nombre',
            autocomplete: 'off'
          ) %>
        </div>
          <%= link_to reset_filterrific_url, class: "btn btn-sm pull-right", style:"position:absolute" do %>
            <%= content_tag(:span, '', class: 'glyphicon glyphicon-refresh') %>
          <% end %>
        <%# add an automated spinner to your form when the list is refreshed %>
        <%= render_filterrific_spinner %>
      <% end %>
    </div>
  </div>
  <div class="clearfix">
  </div>
</div>
