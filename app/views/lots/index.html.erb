<% render 'header' %>

<% if @lots.present? %>
  <div class="card" id="filter-panel">
    <div class="card-header">
      <%= render 'filter' %>
    </div>
    <div class="card-body fixed-panel-index">
      <%= render(
        partial: 'lots/list',
        locals: { lots: @lots }
      ) %>
    </div>
  </div>
<% else %>
  <%= render(
    partial: 'shared/not_found',
    locals: { object_name: 'lotes en stock' }
  ) %>
<% end %>