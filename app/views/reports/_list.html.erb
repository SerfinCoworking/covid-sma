<% if @reports.present? %>
  <div id="filterrific_results">
    <div class="panel panel-default">
      <table class="table table-hover table-striped table-condensed">
        <thead>
          <tr>
            <th><%= filterrific_sorting_link(@filterrific, :nombre) %></th>
            <th><%= filterrific_sorting_link(@filterrific, :desde) %></th>
            <th><%= filterrific_sorting_link(@filterrific, :hasta) %></th>
            <th><%= filterrific_sorting_link(@filterrific, :solicitado_por) %></th>
            <th><%= filterrific_sorting_link(@filterrific, :creado) %></th>
            <th colspan="3">Acciones</th>
          </tr>
        </thead>
        <tbody id=reports>
          <%= render @reports %>
        </tbody>
      </table>
    </div>
    <div id="page_links">
      <%= paginate @reports %>
    </div>
  </div>
<% else %>
  <%= render(
    partial: 'shared/not_found_filter',
    locals: { object_name: 'reportes' }
  ) %>
<% end %>
