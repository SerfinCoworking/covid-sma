<%= simple_form_for @supply, html: { role: 'check-modified'} do |f| %>
  <%= f.error_notification %>
  <div class="row">
    <div class="col-md-8">
      <%= f.hidden_field :is_active, id: "is_active", value: @supply.new_record? ? true : @supply.is_active %>
      <input type="checkbox" name="is-active-check">
      &emsp;&emsp;&emsp;
      <%= f.hidden_field :needs_expiration, id: "needs_expiration", value: @supply.new_record? ? true : @supply.needs_expiration %>
      <input type="checkbox" name="expiration-check">
      <br><br>
      <%= f.input :id, label: 'Código', required: true, placeholder: "Ej: 1234", input_html: {size: 20} %>
      <%= f.input :name, label: 'Nombre de insumo', placeholder: 'Ej: CITRATO DE CLOMIFENO Comp. 50 mg',
          required: true, size: 50, autocomplete: 'off' %>
      <div class="row">
        <div class="col-md-6">
          <%= f.label 'Unidad' %>
          <%= f.input_field :unity,
            id: "new-supply-unity",
            label_method: :name,
            value_method: :name,
            collection: @unities,
            include_blank: true,
            prompt: 'Seleccione unidad' 
          %>
        </div>
        <div class="col-md-6">
          <%= f.label 'Área'%>
          <%= f.input_field :supply_area_id,
            id: "new-supply-area",
            label_method: :name,
            value_method: :id,
            collection: @supply_areas,
            include_blank: true,
            prompt: 'Seleccione un área'
          %>
        </div>
      </div>
      <%= f.input :description, label: 'Descripción', as: :text,
        :input_html => { :cols => 50, :rows => 2 } %>
      <%= f.input :observation, label: 'Observación', as: :text,
        :input_html => { :cols => 50, :rows => 2 } %>
    </div>

    <div class="col-md-4">
      <%= f.hidden_field :active_alarm, id: "active_alarm", value: @supply.new_record? ? true : @supply.active_alarm %>
      <input type="checkbox" name="alarm-check">
      <%= f.input :quantity_alarm, placeholder: 'Cantidad', required: true,
        label: 'Alarma de cantidad', input_html: { min: '0', max:'9999', value: 1 } %>
      <%= f.input :period_alarm, placeholder: 'Días', required: true,
        label: 'Período de alarma', input_html: { min: '0', max:'9999', value: 52 } %>
      <%= f.input :period_control, placeholder: 'Días', required: true,
        label: 'Período de control', input_html: { min: '0', max:'9999', value: 52 } %>
      <%= f.input :expiration_alarm, placeholder: 'Días', required: true,
        label: 'Alarma de expiración', input_html: { min: '0', max:'9999', value: 30 } %>
    </div>
  </div>
<% end %>
