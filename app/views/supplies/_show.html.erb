<p id="notice"><%= notice %></p>

<h5><strong>Suministro: </strong><%= @supply.name %></h5>

<div class="well well-sm">
  <h4>Cantidad en stock: <span class="label label-<%= @supply.quantity_label %>"><%= @supply.quantity %></span></h4></h4>
    <div class="progress">
      <div class="progress-bar progress-bar-<%= @supply.quantity_label %> progress-bar-striped active" style="width: <%= @percent_quantity_supply %>%">
        <%= @percent_quantity_supply %>%
      </div>
    </div>
  Cantidad inicial: <span class="label label-primary"><%= @supply.initial_quantity %></span>
</div>
<div class="row">
  <div class="col-md-6">
    <h5><strong>Recibida:</strong></h5>
    <%= @supply.date_received.strftime("%d/%m/%y %H:%M") %>

    <h5><strong>Expiración:</strong></h5>
    <%= @supply.expiry_date.strftime("%d/%m/%y %H:%M") %>
  </div>
  <div class="col-md-6">
    <h5><strong>Cargada:</strong></h5>
    <%= @supply.created_at.strftime("%d/%m/%y %H:%M") %>

    <h5><strong>Última modificación:</strong></h5>
    <%= @supply.updated_at.strftime("%d/%m/%y %H:%M") %>
  </div>
</div>
