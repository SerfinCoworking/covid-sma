<div class="row">
  <div class="col-md-6">
    <h5><strong>Insumo: </strong><%= @supply.name %></h5>

    <h5><strong>Estado: </strong>
      <span class='label label-<%= @supply.is_active? ? "success" : "danger" %>'>
        <%= @supply.is_active? ? "Activo" : "Inactivo" %>
      </span>
    </h5>

    <h5><strong>Unidad: </strong><%= @supply.unity %></h5>

    <h5><strong>Área: </strong><%= @supply.supply_area.name %></h5>

    <h5><strong>Descripción: </strong>
      <%= @supply.description.present? ? @supply.description : "----" %>
    </h5>

    <h5><strong>Observación: </strong>
      <%= @supply.observation.present? ? @supply.observation : "----" %>
    </h5>
  </div>
  <div class="col-md-6">
    <h5><strong>Expira?: </strong>
      <%= @supply.needs_expiration? ? "Si" : "No" %>
    </h5>

    <h5><strong>Alarma: </strong>
      <span class='label label-<%= @supply.is_active? ? "success" : "default" %>'>
      <%= @supply.active_alarm? ? "Activa" : "Inactiva" %>
    </h5>

    <h5><strong>Alarma de cantidad: </strong>
      <span class="label label-default"><%= @supply.quantity_alarm %></span>
    </h5>

    <h5><strong>Período de alarma: </strong>
      <span class="label label-default"><%= @supply.period_alarm %> días</span>
    </h5>

    <h5><strong>Período de control: </strong>
      <span class="label label-default"><%= @supply.period_control %> días</span>
    </h5>

    <h5><strong>Alarma de expiración: </strong>
      <span class="label label-default"><%= @supply.expiration_alarm %> días</span>
    </h5>
  </div>
</div>
