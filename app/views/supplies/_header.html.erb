<% content_for :page_header do %>
  <li class="nav-item <%= active_action('index') %> non-sel">
    <%= link_to supplies_path, class: 'nav-link' do %>
      <%= fa_icon "pills" %>
      Productos
    <% end %>
  </li>
  <% if policy(Supply).new? %>
    <li class="nav-item <%= active_action('new') %> non-sel">
      <%= link_to new_supply_path, class: 'nav-link' do %>
        <%= fa_icon "plus" %>
        Agregar producto
      <% end %>
    </li>
  <% end %>
  <% if policy(Supply).trash_index? %>
    <li class="nav-item col-md-offset-5 <%= active_action('trash_index') %> non-sel">
      <%= link_to trash_index_supplies_path, class: 'nav-link' do %>
        <%= fa_icon "trash" %>
        Papelera
      <% end %>
    </li>
  <% end %>
<% end %>