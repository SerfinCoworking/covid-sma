<%= simple_form_for @patient, remote: true, html: {class: "form-inline"} do |f| %>
<%= f.error_notification %>
  <%= f.input :first_name, placeholder: 'Nombre', required: true, label: false %>
  <%= f.input :last_name, placeholder: 'Apellido', required: true, label: false %>
  <%= f.input :dni, placeholder: 'DNI', required: true, label: false, input_html: { min: '10000', max:'99999999' } %>
  <%= f.hidden_field :sex, id: "sex", value: 1%>
  <input type="checkbox" name="sex-check">
  <br><br>
  <%= f.input :patient_type_id,
                    label: false,
                    label_method: :name,
                    value_method: :id,
                    collection: @patient_types,
                    include_blank: false,
                    input_html: { id: 'patient_type'},
                    prompt: 'Seleccione un tipo'
  %>
  <%= f.hidden_field :is_chronic, id: "is_chronic", value: false %>
  <input type="checkbox" name="chronic-check">&nbsp;&nbsp;
  <%= f.hidden_field :is_urban, id: "is_urban", value: true %>
  <input type="checkbox" name="urban-check">
  <br><br>
  <%= f.input :birthdate, label: 'Fecha de nacimiento',
                              as: :string,
                              :placeholder => "Seleccionar fecha",
                              input_html: {class: "form-control", required: true, autocomplete: 'off',
                              value: "#{@patient.birthdate unless @patient.new_record?}"},
                              html5: false
                              %><br><br>
  <%= f.input :phone, placeholder: 'TelÃ©fono fijo', label: false %>
  <%= f.input :cell_phone, placeholder: 'Celular', label: false %>
  <%= f.input :email, placeholder: 'Email', label: false %>

<% end %>
