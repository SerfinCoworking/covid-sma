<%= render 'header' %>

<div class="card fixed-custom-card">

  <div class="card-header d-flex align-items-center justify-content-between">
    <div class="d-flex align-items-center">
      <%= fa_icon "eye" %>
      <h5 class="card-title mb-0 ml-2">
        Viendo paciente
      </h5>
    </div>
    <%= link_to patients_path, class: 'btn' do %>
      <%= fa_icon 'times' %>
    <% end %>
  </div>

  <div class="card-body">
    <div class="row">
      <div class="col-10">
        <ul class='nav nav-tabs'>
          <li class='nav-item'>
            <a class="nav-link active" data-toggle='tab' href='#profile'>
              <%= fa_icon "user-injured" %>
              Información
            </a>
          </li>
          <li class='nav-item'>
            <a class="nav-link" data-toggle='<%= @patient.prescriptions.count > 0 ? 'tab' : '' %>' href='#prescriptions'>
              <%= fa_icon "signature" %>
              Recetas
              <span class="badge badge-secondary"><%= @patient.prescriptions.count %></span>
            </a>
          </li>
        </ul>
        <div class="tab-content">
          <!-- Perfil -->
          <div id='profile' class='tab-pane container active'>
            <div class="row">
              <div class="col-12 pt-3"><h5 class="border-bottom">DATOS BÁSICOS</h5></div>
              <div class="col-4">
                <h5><strong>DNI</strong></h5>
                <%= @patient.dni %>
              </div>
              <div class="col-4">
                <h5><strong>Sexo</strong></h5>
                <%= @patient.sex %>
              </div>
              <div class="col-4">
                <h5><strong>Fecha nacimiento</strong></h5>
                <%= @patient.birthdate.present? ? @patient.birthdate.strftime("%d/%m/%Y") : "----" %>
              </div>
              <div class="col-4">
                <h5><strong>Apellido</strong></h5>
                <%= @patient.last_name %>
              </div>
              <div class="col-4">
                <h5><strong>Nombre</strong></h5>
                <%= @patient.first_name %>
              </div>
              <div class="col-4">
                <h5><strong>Estado civil</strong></h5>
                <%= @patient.marital_status %>
              </div>
            </div>
            <br>
            <div class="row">
              <div class="col-12"><h5 class="border-bottom">DATOS DE CONTACTO</h5></div>
              <div class="col-5">
                <h5><strong><span class="glyphicon glyphicon-earphone"></span> Teléfonos</strong></h5>
                <% @patient.patient_phones.each do |phone| %>
                  <p><strong><%= phone.phone_type %>:</strong> <%= phone.number %></p>
                <% end %>
              </div>
              <div class="col-4">
                <h5><strong><span class="glyphicon glyphicon-envelope"></span> Email</strong></h5>
                <%= @patient.email.present? ? @patient.email : "----" %>
              </div>
            </div>
            <br>
            <div class="row">
              <% if @patient.address.present? %>
                <div class="col-12"><h5 class="border-bottom">DATOS DEL DOMICILIO</h5></div>
                <div class="col-3">
                  <p><h5><strong>País</strong></h5><%= @patient.address_country_name %></p>
                </div>
                <div class="col-3">
                  <p><h5><strong>Provincia</strong></h5><%= @patient.address_state_name %></p>
                </div>
                <div class="col-3">
                  <p><h5><strong>Ciudad</strong></h5><%= @patient.address_city_name %></p>
                </div>
                <div class="col-3">
                  <p><h5><strong>Dirección</strong></h5><%= @patient.address_line %></p>
                </div>
              <% end %>
            </div>
          </div>
          <div id='prescriptions' class='tab-pane container fade'>
            <br>
            <h5 class="panel-title d-flex items-align-center justify-content-between">
              <p>
              <strong>Total </strong><%= @patient.prescriptions.count %>
              </p>
              <p>
                Pendientes 
                <span class="badge badge-secondary">
                  <%= @patient.prescriptions.pendiente.count %>
                </span>
              </p>
              <p>
                Dispensadas parcial
                <span class="badge badge-primary">
                <%= @patient.prescriptions.dispensada_parcial.count %>
                </span>
              </p>
              <p> 
                Dispensadas 
                <span class="badge badge-success">
                  <%= @patient.prescriptions.dispensada.count %>
                </span>
              </p>
            </h5>
            <div class="card">
              <table class="table table-hover table-sm">
                <thead>
                  <tr>
                    <th>Código</th>
                    <th>Médico</th>
                    <th>Estado</th>
                    <th>Insumos</th>
                    <th>
                      Recetada
                      <%= content_tag(:span, '', class: 'glyphicon glyphicon-calendar') %>
                    </th>
                    <th>
                      Dispensada
                      <%= content_tag(:span, '', class: 'glyphicon glyphicon-calendar') %>
                    </th>
                    <th class="text-center"></th>
                  </tr>
                </thead>
                <tbody id=patients>
                  <% @patient.prescriptions.each do |prescription| %>
                    <tr id="prescription_<%= prescription.id %>">
                      <td><%= prescription.remit_code %></th>
                      <td class="pres-col-pro"><%= prescription.professional.full_name %></td>
                      <td>
                        <span class="badge badge-<%= prescription_status_label(prescription) %>">
                          <%= prescription.status.underscore.humanize %>
                        </span>
                      </td>
                      <td>
                        <%= prescription.quantity_ord_supply_lots.count %>
                      </td>
                      <td>
                        <% if prescription.prescribed_date.present? %>
                          <%= prescription.prescribed_date.strftime("%d/%m/%Y") %>
                        <% else %>
                          ------
                        <% end %>
                      </td>
                        <% if prescription.dispensada? %>
                          <td>
                          <%= prescription.dispensed_at.strftime("%d/%m/%y %H:%M") %>
                        <% else %>
                          <td>
                          ----
                        <% end %>
                      </td>
                      <td class="actions-col">
                        <% if policy(prescription).show? %>
                          <%= link_to prescription_path(prescription), class: 'btn btn-secondary btn-sm',
                            title: 'Ver detalles', remote: true, data: { toggle: 'tooltip', placement: 'top' } do %>
                            <%= fa_icon "eye" %>
                          <% end %>
                        <% end %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
      <div class="col-2 border-left">
        <%= image_tag patient_avatar(@patient), class:"img-thumbnail" %>
        <h5 class="mt-3"><strong><%= @patient.last_name %>,</strong> <%= @patient.first_name %></h5>

        <h5 class="mt-3">
          <%= @patient.dni %>
          <span class="badge badge-<%= @patient.Temporal? ? "warning" : "success" %>">
            <%= @patient.status %>
          </span>
        </h5>

        <h5> <%= @patient.email %> </h5>

        <% if @patient.birthdate.present? %>
          <p class="mb-0 mt-3"><strong>Fecha de nacimiento</strong></p>
          <p><%= @patient.birthdate.strftime("%d/%m/%Y")%> | <%= @patient.age_string %></h5>
        <% end %>

        <p class="mb-0 mt-3"><strong>Sexo </strong></p>
        <p><%= @patient.sex %></p>

        <% if @patient.cuil.present? %>
          <p class="mb-0 mt-3"><strong>CUIL </strong></p>
          <p><%= @patient.cuil %></p>
        <% end %>

        <% @patient.patient_phones.each do |phone| %>
          <p class="mb-0 mt-3"><strong><%= phone.phone_type %></strong></p> 
          <p><%= phone.number %></p>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer d-flex justify-content-end">
    <%= link_to 'Volver', patients_path, class: "btn mr-2" %>
    <% if policy(@patient).edit? %>
      <%= link_to edit_patient_path(@patient), :"data-turbolinks" => false, class: "btn btn-warning" do %>
        <%= fa_icon "pen" %>
        Editar
      <% end %>
    <% end %>
  </div>
</div>
