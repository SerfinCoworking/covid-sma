<tr id="patient_<%= patient.id %>">
  <div class="js-fade fade-in is-paused">
    <td><%= patient.dni %></td>
    <td><strong><%= patient.last_name %></strong>, <%= patient.first_name %></td>
    <td>
      <span class="label label-<%= patient.Temporal? ? "warning" : "success"%>">
        <%= patient.status %>
      </span>
    </td>
    <td>
      <%= patient.birthdate.present? ? patient.birthdate.strftime("%d/%m/%Y")  : '----' %>
    </td>
    <td><%= patient.age_string %></td>
    <% @count_pres = patient.prescriptions.count %>
    <td><%= patient.sex.humanize %></td>
    <td><span class="label label-<%=if @count_pres > 0; 'primary'; else; 'default'; end%>" ><%= @count_pres %></span></td>
    <td>
      <% if policy(patient).show? %>
        <%= link_to patient_path(patient), class: 'btn btn-secondary btn-sm',
              title: 'Ver detalles', data: { toggle: 'tooltip', placement: 'top' } do %>
          <%= fa_icon "eye" %>
        <% end %>
      <% end %>
      <% if policy(patient).edit? %>
        <%= link_to edit_patient_path(patient), class: 'btn btn-warning btn-sm',
              title: 'Editar', data: { toggle: 'tooltip', placement: 'top' } do %>
          <%= fa_icon "edit" %>
        <% end %>
      <% end %>
      <% if policy(patient).destroy? %>
        <%= link_to delete_patient_path(patient), remote: true,
              class: 'btn btn-danger btn-sm', title: 'Borrar', data: { toggle: 'tooltip', placement: 'top' } do %>
          <%= fa_icon "trash" %>
        <% end %>
      <% end %>
    </td>
  </div>
</tr>
