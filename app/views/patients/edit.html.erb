<%= render 'header' %>

<div class="row">
  <div class="col-md-9">
    <div class="panel panel-warning">
      <div class="panel-heading">
        <h3 class="panel-title"><%= content_tag(:span, '', class: 'glyphicon glyphicon-edit') %> Editando paciente
          <%= link_to patients_path, class: 'btn pull-right close-btn',
            :title => 'Cerrar', :'data-placement'=>'top', :'data-toggle'=>'tooltip' do %>
            <%= content_tag(:span, '', class: 'glyphicon glyphicon-remove') %>
          <% end %>
        </h3>
      </div>
      <div class="panel-body" id="panel-body-new">
        <%= render 'form', patient: @patient %>
      </div>
      <div class="panel-footer text-right">
          <%= link_to 'Volver', :back, class: 'btn' %>
          <button type='submit' name='commit' class='btn btn-success' form='edit_patient_<%=@patient.id%>' value='Solicitante'>
            <%= content_tag(:span, '', class: 'glyphicon glyphicon-floppy-saved') %> Guardar cambios
          </button>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="panel panel-info">
      <div class="panel-heading">
        <h2 class="panel-title">
          <%= content_tag(:span, '', class: 'glyphicon glyphicon-user') %>
          Perfil paciente
        </h2>
      </div>
      <div class="panel-body text-center">
        <%= image_tag patient_avatar(@patient, 200), class:"img-thumbnail" %>
        <h5><strong><%= @patient.last_name %></strong> <%= @patient.first_name %></h5>
      
        <h5>DNI <%= @patient.dni %></h5>

        <h5> <%= @patient.email %> </h5>

        <% if @patient.birthdate.present? %>
         <h5><strong>Edad </strong><%= @patient.age_string %></h5>
        <% end %>
    
        <% @patient.patient_phones.each do |phone| %>
          <h5><span class="glyphicon glyphicon-earphone"></span> <%= phone.number %></h5>
        <% end %>

        <h5><strong>Estado </strong>
          <span class="label label-<%= @patient.Temporal? ? "warning" : "success"%>">
            <%= @patient.status %>
          </span>
        </h5>
      </div>
    </div>
  </div>
</div>
