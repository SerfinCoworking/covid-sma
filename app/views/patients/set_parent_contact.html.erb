<%= render 'header' %>

<div class="card fixed-custom-card">
  <div class="card-header bg-primary text-white d-flex align-items-center justify-content-between">
    <div class="d-flex align-items-center ml-2">
      <%= fa_icon "edit" %>
      <h5 class="card-title mb-0 ml-2">
        Asignando contacto padre de 
        <%= @patient.dni %>,
        <strong><%= @patient.last_name %></strong> <%= @patient.first_name %>
      </h5>
    </div>
    <%= link_to :back, class: @patient.new_record? ? 'btn text-white' : 'btn' do %>
      <%= fa_icon "times" %>
    <% end %>
  </div>
  <div class="card-body">
    <%= render 'parent_contact_form', patient: @patient %>
  </div>
  <div class="card-footer d-flex justify-content-end">
    <%= link_to 'Volver', patients_path, class: 'btn mr-2' %>
    <button type='submit' name='commit' class='btn btn-success' form="set-parent-contact">
      <%= fa_icon 'save' %> Guardar relaci√≥n
    </button>
  </div>
</div>
