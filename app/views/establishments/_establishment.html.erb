<tr id="establishment_<%= establishment.id %>">
  <div class="js-fade fade-in is-paused">
    <td class="text-truncate" style="max-width: 120px;"><%= establishment.name %></td>
    <td><%= establishment.sectors.count %></td>
    <td><%= establishment.users.count %></td>
    <td class="text-truncate" style="max-width: 120px;"><%= establishment.city.present? ? establishment.city.name : '---' %></td>
    <td class="text-left actions-col">
      <% if policy(establishment).show? %>
        <%= link_to establishment_path(establishment), class: 'btn btn-secondary btn-sm',
          title: 'Ver detalles', data: { toggle: 'tooltip', placement: 'top' } do %>
          <%= fa_icon "eye" %>
        <% end %>
      <% end %>
      <% if policy(establishment).edit? %>
        <%= link_to edit_establishment_path(establishment), class: 'btn btn-warning btn-sm',
          title: 'Editar', data: { toggle: 'tooltip', placement: 'top' } do %>
          <%= fa_icon "pen" %>
        <% end %>
      <% end %>
      <% if policy(establishment).destroy? %>
        <%= link_to delete_establishment_path(establishment), remote: true,
          class: 'btn btn-danger btn-sm', title: 'Borrar', data: { toggle: 'tooltip', placement: 'top' } do %>
          <%= fa_icon "trash" %>
        <% end %>
      <% end %>
    </td>
  </div>
</tr>
