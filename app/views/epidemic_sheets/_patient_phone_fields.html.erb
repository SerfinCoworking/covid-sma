
<tr class="nested-fields phones-form">
  <td>
    <div class="d-none hidden-input-container"> 
      <%= f.input :sex_fake, 
        as: :fake, 
        label: false, 
        :input_html => {
          readOnly: true, 
          class: "input-sm"
        }
      %>
    </div>
  
    <%= f.input :phone_type, label: false, include_blank: false,
      collection: PatientPhone.phone_types,
      :value_method => :first,
      :input_html => {
        required: true,
        include_blank: false,
        class: "selectpicker custom-select-pick phone-type #{f.object.number.present? ? 'd-none' : ''}",
        "data-width"=>"100%",
        "data-size"=>"10",
        value: "#{ f.object.phone_type }"
      }
    %>
  </td>
  <td>
    <%= f.input :number, label: false, :input_html => { class: "input-sm phone-number"}, value: f.object.number, readOnly: f.object.number.present? %>
  </td>
  <td>
    <% if !f.object.number.present? %>
      <%= link_to_remove_association  f, class: 'remove-tag btn btn-warning',
        title: 'Quitar', data: { toggle: 'tooltip', placement: 'top' } do %>
        <%= fa_icon "minus" %>
      <% end %>
    <% end %>
  </td>
</tr>
