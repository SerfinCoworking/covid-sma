<h5 class="border-bottom">Antecedentes epidemiológicos</h5>
<div class="row">
  <div class="col-4">
    <div class="custom-control custom-switch">
      <%= f.check_box :presents_epidemi_antecedents, class: "custom-control-input", id: "present-epidemi-antecedents", checked: ((f.object.presents_epidemi_antecedents.present? && f.object.presents_epidemi_antecedents) || f.object.errors[:antecedents_validate_presence].any?) %>
      <label class="custom-control-label" for="present-epidemi-antecedents">Presenta antecedentes </label>
    </div>
  </div>
  <div class="col-4 fade options-fields <%= (f.object.presents_epidemi_antecedents.present? && f.object.presents_epidemi_antecedents) || f.object.errors[:antecedents_validate_presence].any? ? 'show' : ''%>">
    <%# epidemi-antecedent %>
    <%= f.input :epidemi_antecedent_ids, label: 'Antecedentes',
      collection: @epidemi_antecedents,
      :input_html => {
        multiple: true,
        required: true,
        include_blank: false,
        class: "selectpicker-md custom-select-pick show-tick #{f.object.errors[:antecedents_validate_presence].any? ? 'is-invalid' : ''}",
        "data-width"=>"100%",
        "data-size"=>"10",
        "title"=> "Seleccionar antecedentes",
        "data-live-search" => true,
        "data-none-results-text" => "No se encontró el antecedente"
      }
    %>
                  
    <% if f.object.errors[:antecedents_validate_presence].any? %>
      <div class="invalid-feedback d-block">
        <%= f.object.errors[:antecedents_validate_presence].first %>
      </div>
    <% end %>
  </div>
    
  <div class="col-4 fade options-fields <%= ((f.object.presents_epidemi_antecedents.present? && f.object.presents_epidemi_antecedents) || f.object.errors[:antecedents_validate_presence].any? ? 'show' : '') %>">
    <%= f.input :epidemi_antecedent_observations, 
    label: 'Observaciones', 
    :input_html => {
      class: 'observations-field' 
    }
    %>
  </div>
</div>