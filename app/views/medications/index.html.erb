<p id="notice"><%= notice %></p>

<h1>Stock de medicamentos</h1>

<div class="panel panel-default">
  <table class="table table-hover table-striped">
    <thead>
      <tr>
        <th>Medicamento</th>
        <th>Marca</th>
        <th>Cantidad</th>
        <th>Fecha recepción</th>
        <th>Fecha expiración</th>
        <th colspan="3">
        <%= link_to new_medication_path, remote: true, class: 'btn btn-primary btn-xs' do %>
          Nuevo lote
        <% end %></th>
      </tr>
    </thead>

    <tbody id=medications>
      <%= render @medications %>
    </tbody>
  </table>

  <%= render 'dialog' %>
</div>

<br>
