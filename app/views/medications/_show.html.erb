<div class="row">
  <div class="col-md-6">
    <h5><strong>Droga: </strong></h5>
    <%= @medication.vademecum.medication_name %>

    <h5><strong>Nivel de complejidad: </strong></h5>
    <%= @medication.vademecum.level_complexity %>

    <h5><strong>Indicaciones: </strong></h5>
    <%= @medication.vademecum.indications %>

    <h5><strong>Marca</strong></h5>
    <%= @medication.medication_brand.name %>

    <h5><strong>Laboratorio</strong></h5>
      <%= @medication.medication_brand.laboratory.name %>
    </span>
    <br><br>
    <div class="well well-sm">
      <h4>Cantidad en stock: <span class="label label-<%= @medication.quantity_label %>"><%= @medication.quantity %></span></h4>
        <div class="progress">
          <div class="progress-bar progress-bar-<%= @medication.quantity_label %> progress-bar-striped active" style="width: <%= @percent_quantity_medication %>%">
            <%= @percent_quantity_medication %>%
          </div>
        </div>
      Cantidad inicial: <span class="label label-primary"><%= @medication.initial_quantity %></span>
    </div>
  </div>

  <div class="col-md-6">
    <p>
      <h5><strong>Fecha recibida:</strong></h5>
      <%= @medication.date_received.strftime("%d/%m/%y %H:%M") %>
    </p>

    <p>
      <h5><strong>Fecha expiración:</strong></h5>
      <%= @medication.expiry_date.strftime("%d/%m/%y %H:%M") %>
    </p>

    <p>
      <h5><strong>Fecha cargada:</strong></h5>
      <%= @medication.created_at.strftime("%d/%m/%y %H:%M") %>
    </p>

    <p>
      <h5><strong>Fecha última modificación:</strong></h5>
      <%= @medication.updated_at.strftime("%d/%m/%y %H:%M") %>
    </p>
  </div>
</div>
